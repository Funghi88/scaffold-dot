{
  "name": "@se-2/hardhat",
  "version": "0.0.1",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "account:generate": "ts-node scripts/generateAccountStandalone.ts",
    "account:import": "ts-node scripts/importAccountStandalone.ts",
    "account:generate:hardhat": "hardhat run scripts/generateAccount.ts",
    "account:import:hardhat": "hardhat run scripts/importAccount.ts",
    "account:reveal-pk": "hardhat run scripts/revealPK.ts",
    "chain": "npx hardhat node",
    "check-types": "tsc --noEmit --incremental",
    "clean": "hardhat clean",
    "compile": "cd foundry && forge build",
    "compile:hardhat": "hardhat compile",
    "flatten": "hardhat flatten",
    "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
    "fund": "hardhat run scripts/fund.ts",
    "deploy": "ts-node scripts/deployWithFoundryArtifacts.ts",
    "deploy:paseo": "ts-node scripts/deployToPaseo.ts",
    "generate-abis": "ts-node scripts/generateAbisFromAddresses.ts",
    "deploy:hardhat": "npx hardhat run scripts/runHardhatDeployWithPK.ts",
    "deploy:foundry": "ts-node scripts/deployFoundry.ts",
    "deploy:hybrid": "ts-node scripts/deployWithFoundryArtifacts.ts",
    "foundry:build": "cd foundry && forge build",
    "foundry:test": "cd foundry && forge test",
    "foundry:script": "cd foundry && forge script",
    "format": "prettier --write './**/*.(ts|sol)'",
    "generate": "yarn account:generate",
    "hardhat-verify": "hardhat verify",
    "lint": "eslint . || echo 'ESLint not configured - skipping'",
    "lint-staged": "eslint",
    "test": "yarn hardhat test --network hardhat",
    "test:foundry": "cd foundry && forge test",
    "test:all": "yarn test && yarn test:foundry",
    "verify": "hardhat etherscan-verify"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "2.0.8",
    "@nomicfoundation/hardhat-ethers": "3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "0.15.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@parity/hardhat-polkadot": "^0.1.5",
    "@parity/hardhat-polkadot-node": "^0.1.1",
    "@parity/hardhat-polkadot-resolc": "^0.1.3",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.21",
    "@types/qrcode": "~1.5.5",
    "chai": "^4.5.0",
    "ethers": "^6.14.1",
    "hardhat": "^2.22.19",
    "hardhat-deploy": "~0.12.4",
    "hardhat-deploy-ethers": "~0.4.2",
    "hardhat-gas-reporter": "^1.0.10",
    "solc": "0.8.28",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "8.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@inquirer/password": "^4.0.2",
    "@openzeppelin/contracts": "^5.3.0",
    "@polkadot-labs/hdkd": "^0.0.21",
    "@polkadot-labs/hdkd-helpers": "^0.0.21",
    "@typechain/ethers-v6": "~0.5.1",
    "dotenv": "~16.4.5",
    "envfile": "~7.1.0",
    "polkadot-api": "^1.16.1",
    "qrcode": "~1.5.4"
  }
}
